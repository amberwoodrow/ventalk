<div class="row">
	<div class="signin">
		<h1>Sign in</h1>
  	<%= form_for @user, url: do_signin_path, method: "post" do |f| %>
		  <div class="form-group">
				<%= f.label :email, class: "control-label" %>
				<%= f.text_field :email, :placeholder => "email@domain.com", class: "form-control" %>
		  </div>
		  <div class="form-group">
				<%= f.label :password, class: "control-label" %>
				<%= f.password_field :password, :placeholder => "Enter a password", class: "form-control" %>
		  </div>
		  <%= f.submit "Log in", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
<div class="row">
	<div class="register">
		<h1>Register</h1>
  	<%= form_for @user, url: do_register_path, method: "post" do |f| %>
		  <div class="form-group">
				<%= f.label :email, class: "control-label" %>
				<%= f.text_field :email, :placeholder => "email@domain.com", class: "form-control" %>
		  </div>
		  <div class="form-group">
				<%= f.label :username, class: "control-label" %>
				<%= f.text_field :email, :placeholder => "Enter a username", class: "form-control" %>
		  </div>
		  <div class="form-group">
				<%= f.label :password, class: "control-label" %>
				<%= f.password_field :password, :placeholder => "Enter a password", class: "form-control" %>
		  </div>
		  <%= f.submit "Sign up", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>